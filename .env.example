# Pulse - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# SERVICE NODE CONFIGURATION
# =============================================================================

# Secret key for encrypting credentials (32+ characters, random)
# Generate with: openssl rand -base64 32
SERVICE_NODE_SECRET=your-secret-key-here-min-32-chars

# Bind address for the API server
# Use 127.0.0.1 for local only, 0.0.0.0 for LAN access
BIND_ADDR=127.0.0.1:8080

# Log level: debug, info, warn, error
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection string
# Format: postgres://user:password@host:port/database?sslmode=disable
DATABASE_URL=postgres://pulse:pulse@localhost:5432/pulse?sslmode=disable

# For Docker Compose, use the service name:
# DATABASE_URL=postgres://pulse:pulse@db:5432/pulse?sslmode=disable

# =============================================================================
# SMTP CONFIGURATION (Email Notifications)
# =============================================================================

# SMTP server hostname
SMTP_HOST=

# SMTP server port (587 for TLS, 465 for SSL, 25 for unencrypted)
SMTP_PORT=587

# SMTP username (often your email address)
SMTP_USER=

# SMTP password or app-specific password
# For Gmail, create an app password: https://myaccount.google.com/apppasswords
SMTP_PASSWORD=

# From address for notification emails
SMTP_FROM=

# Enable TLS (true/false)
SMTP_TLS=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# Maximum requests per second per IP
RATE_LIMIT=100

# =============================================================================
# TLS CONFIGURATION (Optional)
# =============================================================================

# Path to TLS certificate file (leave empty to disable TLS)
TLS_CERT_FILE=

# Path to TLS private key file
TLS_KEY_FILE=

# Auto-generate self-signed certificate on first run (true/false)
TLS_AUTO_CERT=false

# =============================================================================
# COLLECTOR CONFIGURATION
# =============================================================================

# Default collection interval in seconds
COLLECT_INTERVAL=15

# Collection timeout in seconds
COLLECT_TIMEOUT=10

# Number of concurrent collection workers
COLLECT_WORKERS=10

# =============================================================================
# RETENTION POLICIES
# =============================================================================

# Raw metrics retention in days
METRICS_RETENTION_DAYS=7

# Downsampled metrics retention in days
METRICS_DOWNSAMPLE_RETENTION_DAYS=90

# Log retention in days
LOGS_RETENTION_DAYS=7

# =============================================================================
# DOCKER REGISTRY (for deployment)
# =============================================================================

# Container registry for Docker images
REGISTRY=ghcr.io/your-org

# Version tag for Docker images
VERSION=latest
